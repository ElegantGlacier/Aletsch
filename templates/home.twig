{% extends 'layout.twig' %}

{% block content %}
<main class="container mx-auto p-6">
    <section class="mb-12">
        <h2 class="text-2xl font-semibold mb-4">Latest Posts</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
            {% for post in latest_posts %}
            <div class="bg-white bg-opacity-60 backdrop-blur-md border border-gray-200 rounded-lg shadow-lg p-4">
                <h3 class="text-xl font-semibold mb-2">{{ post.post_title }}</h3>
                <p class="text-gray-700">{{ post.post_excerpt }}</p>
                <a href="posts/{{ post.ID }}" class="text-blue-500 hover:underline mt-4 block">Read More</a>
            </div>
            {% endfor %}
        </div>
    </section>

    <section>
        <h2 class="text-2xl font-semibold mb-4">Latest Pages</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
            {% for page in latest_pages %}
            <div class="bg-white bg-opacity-60 backdrop-blur-md border border-gray-200 rounded-lg shadow-lg p-4">
                <h3 class="text-xl font-semibold mb-2">{{ page.post_title }}</h3>
                <p class="text-gray-700">{{ page.post_excerpt }}</p>
                <a href="pages/{{ page.ID }}" class="text-blue-500 hover:underline mt-4 block">Read More</a>
            </div>
            {% endfor %}
        </div>
    </section>
</main>
{% endblock %}

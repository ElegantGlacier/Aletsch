{% extends 'layout.twig' %}

{% block content %}
    <header class="bg-white shadow">
        <div class="container mx-auto py-6 px-4">
            <h1 class="text-3xl font-bold text-gray-900">Blog Posts</h1>
        </div>
    </header>

    <main class="container mx-auto my-8 px-4">
        {% if posts %}
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {% for post in posts %}
                    <article class="bg-white rounded-lg shadow p-6">
                        <h2 class="text-2xl font-semibold mb-2">{{ post.post_title }}</h2>
                        <p class="text-gray-700 mb-4">{{ post.post_excerpt }}</p>
                        <a href="post/{{ post.ID }}" class="text-blue-500 hover:underline">Read More</a>
                    </article>
                {% endfor %}
            </div>
        {% else %}
            <p class="text-gray-700">No posts available.</p>
        {% endif %}
    </main>
{% endblock %}
